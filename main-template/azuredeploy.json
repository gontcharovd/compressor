{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        // "applicationPrefix": {
        //     "type": "string",
        //     "metadata": {
        //         "description": "Prefix to use when creating the resources in this deployment."
        //     },
        //     "maxLength": 11
        // },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located."
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            }
        }
    },
    "variables": {
        // "containerRegistryName": "[concat(parameters('applicationPrefix'), '-cr-', uniqueString(resourceGroup().Id))]",

        "linkedTemplates": {
            "containerRegistry": "[concat(parameters('_artifactsLocation'), 'linked-templates/container-registry/azuredeploy.json', parameters('_artifactsLocationSasToken'))]"
        },
        "linkedTemplatesParameters": {
            "containerRegistry": "[concat(parameters('_artifactsLocation'), 'linked-templates/container-registry/azuredeploy.parameters.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "name": "containerRegistryDeployment",
            "resourceGroup": "[resourceGroup().name]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('linkedTemplates').containerRegistry]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('linkedTemplatesParameters').containerRegistry]",
                    "contentVersion": "1.0.0.0"
				}
			}
        }
    ]
}